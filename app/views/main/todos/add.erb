<h1>Add a to do</h1>

<form action="/todos/added_todo" method="post">

Title:<br>
<input type="string" name="title"><br>
<br>

Description:<br>
<input type="string" name="description"><br>
<br>

Category:<br>
<select name ="category">
<% @categories.each do |c| %>
  <option value="<%= c.id %>"> <%= c.name %> </option>
<% end %>
</select>
<br>
<br>

User(s) designated:<br>
<% @users.each do |u| %>
<input type="checkbox" name="designated[]" value="<%= u.id %>">
  <%= u.name %><br>
<% end %>
<br>
<br>
<input type="submit" value="Submit"><br>


</form><br>